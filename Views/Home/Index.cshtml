@{
    ViewData["Title"] = "Home Page";
}

<div class="container mt-5">
    <div class="text-center mb-4">
        <h1 class="display-4">Bienvenidos a FarmaCenter</h1>
        <p class="lead">Compre sus productos de manera rápida y sencilla.</p>

        <a class="btn btn-primary m-2" href="/Productos">🗂 Ver Productos</a>
        <a class="btn btn-success m-2" href="/Productos/Create">➕ Agregar Producto</a>
    </div>
@using (Html.BeginForm("Index", "Productos", FormMethod.Get))
{
        <div class="input-group mb-4">
            <input type="text" name="buscar" class="form-control" placeholder="🔍 Buscar producto..." value="@Context.Request.Query["buscar"]" />
            <button type="submit" class="btn btn-outline-primary">Buscar</button>
        </div>
}



    <div class="container my-2">
        <div id="carruselFarmacia" class="carousel slide mx-auto" data-bs-ride="carousel" style="max-width: 800px;">
            <div class="carousel-inner rounded shadow">

                <div class="carrousel-item active">
                    <img src="/Cebion-efervescente-naranja.png" class="d-block w-100" alt="vitamina Cebion">
                </div>
                
                <div class="carousel-item active">
                    <img src="/energizante.jpg" class="d-block w-100" alt="Farmacia 1">
                </div>

                <div class="carousel-item">
                    <img src="/pediasure.png" class="d-block w-100" alt="Farmacia 2">
                </div>

                <div class="carrousel-item active">
                    <img src="/centrum-family.jpg" class="d-block w-100" alt="vitamina C">
                </div>

                <div class="carousel-item">
                    <img src="~/rochePo.jpg" class="d-block w-100" alt="Farmacia 3">
                </div>

                <div class="carousel-item">
                    <img src="~/vitamina.jpeg" class="d-block w-100" alt="Farmacia 3">
                </div>

            </div>

            <!-- Controles (opcional) -->
            <button class="carousel-control-prev" type="button" data-bs-target="#carruselFarmacia" data-bs-slide="prev">
                <span class="carousel-control-prev-icon"></span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#carruselFarmacia" data-bs-slide="next">
                <span class="carousel-control-next-icon"></span>
            </button>
        </div>
    </div>

    <div style="position: fixed; bottom: 20px; right: 20px; z-index: 1000; width: 300px;">
        <div class="card shadow border-info">
            <div class="card-header bg-info text-white">
                <h6 class="mb-0">📞 Contacto</h6>
            </div>
            <div class="card-body p-2">
                <p class="mb-1"><strong>📧</strong> contacto@farmacenter.com</p>
                <p class="mb-1"><strong>📱</strong> +503 25002500</p>
                <p class="mb-0"><strong>🕒</strong> Lun-Sáb: 8am - 5pm</p>
            </div>
        </div>
    </div>
    <div style="position: fixed; bottom: 20px; left: 20px; z-index: 1000; width: 300px;">
        <div class="card shadow border-secondary">
            <div class="card-header bg-secondary text-white">
                <h6 class="mb-0">💬 Déjanos tu comentario</h6>
            </div>
            <div class="card-body p-2">
                <textarea id="comentarioCliente" class="form-control mb-2" rows="3" placeholder="Escribe tu comentario..."></textarea>
                <button class="btn btn-sm btn-secondary w-100" onclick="enviarComentario()">Enviar</button>
            </div>
            <script>
                function enviarComentario() {
                    const comentario = document.getElementById("comentarioCliente").value.trim();
                    if (comentario) {
                        alert("¡Gracias por tu comentario!\n\n" + comentario);
                        document.getElementById("comentarioCliente").value = "";
                    } else {
                        alert("Por favor escribe un comentario antes de enviarlo.");
                    }
                }
            </script>
        </div>
    </div>
